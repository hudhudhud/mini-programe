@import '/font-awesome/fontawesome.wxss';
/* 文件样式 */
.file-list .fa-folder{
  color:#7FAEEB;
}
.file-list.containCheck{
  padding-bottom:100rpx;
}
.folder-module-title{
  color:#A1A1A1;
  font-size:28rpx;
  padding:10rpx 0;
  display: block;
  padding-left:30rpx;
  width:100%;
  box-sizing: border-box;
}

.file-list .folder-line{
  width:100%;
  box-sizing: border-box;
  padding:20rpx 0;
  border-bottom:1rpx solid #EBEBEB;
  display:flex;
  justify-content: space-between;
  align-items: center;
}
.file-list .left{
  width:90%;
  padding-left:30rpx;
  box-sizing: border-box;
  display:flex;
  align-items: center;

}
.file-list .left .check-wrapper{
  font-size:45rpx;
  color:#BABABA;
  margin-right: 20rpx;
}
.file-list .left .check-wrapper .checked{
  color:#4A7DBF;
}
.file-list .left .content{
  display:flex;
  align-items: center;
  flex-grow:1;
}
.file-list .left .content .fa{
  margin-right: 20rpx;
  font-size: 60rpx;
}
.file-list .left .content image{
  width:60rpx;
  height:60rpx;
  border-radius: 10rpx;
  margin-right: 20rpx;
}
.file-list .left .content .folder-name{
  display:inline-block;
  overflow: hidden;
  text-overflow: ellipsis;
  vertical-align: middle;
  width:90%;
  white-space: nowrap;
}
.file-list .right.info-btn{
  width:10%;
  height:60rpx;
  text-align: center;
  line-height: 60rpx;
  padding-right: 30rpx;
  box-sizing: border-box;
}
.gray{
  color:#BABABA;
}

/* 搜索结果文件操作 */
.modal-file-folder-input{
  width:100%;
  height:80rpx;
  border:2rpx solid #BABABA;
  text-align:left;
  padding:0 10rpx;
  box-sizing: border-box;
}
.modal-tip{
  line-height:3;
  font-size:30rpx
}
.operation-btns{
  display:flex;
  background-color:#F0F0F0;
  width:100%;
  padding:20rpx 0;
}
.operation-btns .action-btn{
  width:150rpx;
  height:150rpx;
  display:inline-block;
  text-align: center;
  border-radius: 30rpx;
}
.operation-btns .action-btn i{
  font-size:50rpx;
  font-weight: 500;
}
.operation-btns .action-btn .icon{
  margin:auto;
  width:100rpx;
  height:100rpx;
  display:flex;
  justify-content: center;
  align-items: center;
  background-color:#fff;
}
.operation-btns .action-btn .title{
 font-size:26rpx;
 color:#8E8E8E;
}
.operation-btns .share-btn{
  width:100rpx;
  height:100rpx;
  display:flex;
  justify-content: center;
  align-items: center;
 }
 .operation-btns .share-btn .fa-share{
   color:#398CFE;
 }
 .action-item-txt{
   background-color:#F0F0F0;
   width:100%;
   padding:30rpx 0;
   text-align: center;
 }
 .action-item-txt text{
  display: inline-block;
  width:80%;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
 }

 .check-operation-btns{
   position:fixed;
   bottom:0;
   display:flex;
   height:100rpx;
   line-height: 100rpx;
   background-color:#FAFAFA;
   width:100%;
   z-index: 999;
 }
 .check-operation-btns .btn{
   width:50%;
   text-align:center;
 }
 .check-operation-btns .btn.del{
  color:red;
}