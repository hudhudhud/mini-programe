/* 带清空键的输入框 */
.input-content{
  width:100%;
  height:100rpx;
  border:1px solid #E6E6E6;
  display: flex;
  align-items: center;
  background-color:#fff;
  font-size: 30rpx;
  box-sizing: border-box;
}

.input-content input{
  padding:0 10rpx;
  width:92%;
  height:100%;
  border:none;
  box-sizing: border-box;
}
