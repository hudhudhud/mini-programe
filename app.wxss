.folder-module{
  width:100%;
  box-sizing: border-box;
  background-color:#fff;
  padding:0 20rpx;
  font-size:32rpx;
}

.folder-module .fa-folder{
  color:#7FAEEB;
  margin-right: 20rpx;
  font-size: 60rpx;
}
.fa-folder{
  color:#7FAEEB;
}
.folder-module .title{
  color:#A1A1A1;
  font-size:28rpx;
  padding:10rpx 0;
  display: block;
}
.folder-module .folder-line{
  padding:20rpx 0;
  border-bottom:1rpx solid #EBEBEB;
  display:flex;
  justify-content: space-between;
  align-items: center;
}
.folder-module .left{
  width:90%;
  display:flex;
  align-items: center;
}
.folder-module .left .fa{
  width:10%;
}
.folder-module .left .folder-name{
  display:inline-block;
  overflow: hidden;
  text-overflow: ellipsis;
  vertical-align: middle;
  width:90%;
  white-space: nowrap;
}
.folder-module .right.info-btn{
  width:10%;
  height:60rpx;
  text-align: center;
  line-height: 60rpx;
}
.folder-module .fa-file-text-o{
  color:#BABABA;
  margin-right: 20rpx;
  font-size: 55rpx;
}
.gray{
  color:#BABABA;
}